# GoDAM AI Service Environment Variables
# Copy this file to .env and update with your values

# ============================================================================
# DATABASE CONFIGURATION (Read-only access for AI)
# ============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=godam

# Create this user in PostgreSQL using ai_schema.sql
AI_DB_USER=ai_readonly
AI_DB_PASSWORD=ai_readonly_secure_2024

# ============================================================================
# OLLAMA CONFIGURATION (Offline LLM)
# ============================================================================

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TEMPERATURE=0.3
OLLAMA_MAX_TOKENS=2048

# ============================================================================
# AI SERVICE CONFIGURATION
# ============================================================================

LOG_LEVEL=INFO

# ============================================================================
# SECURITY - DO NOT CHANGE UNLESS NEEDED
# ============================================================================

# These operations are always blocked
SECURITY_BLOCKED_KEYWORDS=DROP,DELETE,UPDATE,INSERT,ALTER,TRUNCATE,EXECUTE,CREATE

w